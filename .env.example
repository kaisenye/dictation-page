# Supabase Configuration
# Get these values from your Supabase project settings → API

# Project URL (safe for browser - starts with NEXT_PUBLIC_)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url_here

# Anonymous/Public Key (safe for browser - starts with NEXT_PUBLIC_)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Service Role Key (server-only - keep this SECRET!)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Resend Configuration
# Get this from your Resend dashboard → API Keys
RESEND_API_KEY=your_resend_api_key_here

# Stripe Configuration
# Get these values from your Stripe dashboard → Developers → API keys
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here

# Webhook secret for verifying Stripe webhook signatures
# Get this from Stripe CLI or your webhook endpoint in the dashboard
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Site URL for Stripe redirects
NEXT_PUBLIC_SITE_URL=http://localhost:3000